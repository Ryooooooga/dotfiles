root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{js,json}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[.*rc]
indent_style = space
indent_size = 2

[{*.sh,*.bash,*.zsh,.zsh*}]
indent_style = space
indent_size = 4

[*.sublime-*]
indent_style = tab
indent_size = 2
