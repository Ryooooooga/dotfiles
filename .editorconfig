root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{ts,tsx}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[{*.sh,*.bash,*.zsh,.zsh*}]
indent_style = space
indent_size = 2

[*.lua]
indent_style = space
indent_size = 2

[*.ahk]
indent_style = space
indent_size = 2

[.clang-format]
indent_style = space
indent_size = 2
