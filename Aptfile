#!/usr/bin/env bash
add-apt-repository ppa:git-core/ppa &&
add-apt-repository ppa:lazygit-team/release &&
apt-get update && apt-get upgrade &&
apt-get install \
    build-essential \
    zsh \
    git \
    neovim \
    tmux \
    wget \
    unzip \
    zip \
    colordiff \
    gpg \
    python \
    python-pip \
    python3 \
    python3-pip \
    lazygit
