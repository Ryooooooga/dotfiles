[core]
    autocrlf = false
    ignoreCase = false
    pager = delta --dark

[init]
    defaultBranch = master
    templateDir = ~/.config/git/template

[commit]
    verbose = true
    gpgSign = false # overwriten in config.local

[merge]
    ff = false

[pull]
    ff = only

[push]
    default = simple

[fetch]
    prune = true

[tag]
    forceSignAnnotated = false # overwriten in config.local

[alias]
    # add
    aa = add -vA
    ai = add -i

    # config
    aliases = config --get-regexp '^alias.*'

    # rev-parse
    dir = rev-parse --show-toplevel

    # branch
    b = branch

    # commit
    c = commit
    cm = commit -m
    cz = !git-cz
    uncommit = reset --soft HEAD^

    # checkout
    co = !echo 'use `switch` or `restore` instead of co (checkout)' && false
    sw = switch

    # tag
    tags = tag -l

    # fetch
    f = fetch
    fu = fetch upstream

    # log
    graph = lg

    # push
    ps = push
    psu = !git push -u origin `git symbolic-ref --short HEAD`

    # pull
    pl = pull

    # status
    s = status

    # diff
    df = !git-df
    diffs = df --staged
    dfs = df --staged
    stat = diff --stat
    st = diff --stat
    sts = diff --stat --staged

    # hub
    sync = !hub sync
    pr = !hub pull-request
    browse = !hub browse
    browse-issues = !hub browse -- issues
    browse-pr = !hub browse -- pulls
    browse-releases = !hub browse -- releases
    browse-actions = !hub browse -- actions

    # ghq
    get = !ghq get
    list = !ghq list
    update-all = "!ghq list --full-path | while read r; do echo "$r"; git -C "$r" pull; done"

    # git subcommands
    create = !git-create
    a = !git-a
    users = !git-users
    user = !git-user
    lg = !git-lg
    exec = !git-exec
    ignore = !git-ignore

[user]
    useConfigOnly = true

[users "ryoga"]
    name = Ryooooooga
    email = ryoga_314@yahoo.co.jp
    signingKey = "" # overwriten in config.local

[gpg]
    program = gpg

[url "git@github.com:"]
    pushInsteadOf = https://github.com/
    insteadOf = gh:

[url "git@gist.github.com:"]
    pushInsteadOf = https://gist.github.com/Ryooooooga/
    insteadOf = gist:

[ghq]
    root = ~/.local/share/go/src
    root = ~/Workspace

[include]
    path = config.local
