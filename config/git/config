[core]
    autocrlf = false
[commit]
    verbose = true
    gpgSign = false
[merge]
    ff = false
[pull]
    ff = only
[fetch]
    prune = true
[alias]
    # init
    init-repo = !git-init-repo

    # add
    a = !git-a
    aa = add -vA

    # config
    aliases = config --get-regexp '^alias.*'
    users = config --get-regexp '^users.*'

    # rev-parse
    dir = rev-parse --show-toplevel

    # branch
    b = branch

    # commit
    c = commit
    cm = commit -m

    # checkout
    co = !echo 'use `switch` or `restore` instead of co (checkout)' && false
    sw = switch

    # tag
    tags = tag -l

    # fetch
    f = fetch
    fu = fetch upstream

    # log
    lg = !git-lg
    graph = lg

    # push
    ps = push
    psu = !git push -u origin `git symbolic-ref --short HEAD`

    # pull
    pl = pull

    # status
    s = status

    # diff
    df = !git-df
    diffstgd = df --staged
    dfst = diffstgd

    # sync
    sync = !hub sync

    # browse
    browse = !hub browse
    browse-issues = !hub browse -- issues
    browse-pr = !hub browse -- pulls
    browse-releases = !hub browse -- releases
    browse-actions = !hub browse -- actions

    # ghq
    get = !ghq get

[user]
    name = Ryooooooga
    email = ryoga_314@yahoo.co.jp
    signingKey = ""
[gpg]
    program = gpg
[tag]
    forceSignAnnotated = false
[url "git@github.com:"]
    pushInsteadOf = https://github.com/
[url "git@gist.github.com:"]
    pushInsteadOf = https://gist.github.com/Ryooooooga/
[ghq]
    root = ~/Workspace
[users]
    ryoga = Ryooooooga:ryoga_314@yahoo.co.jp
[include]
    path = config.local
