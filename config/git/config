[core]
    autocrlf = false
	pager = delta --dark

[commit]
    verbose = true
    gpgSign = false # overwriten in config.local

[merge]
    ff = false

[pull]
    ff = only

[fetch]
    prune = true

[tag]
    forceSignAnnotated = false # overwriten in config.local

[alias]
    # init
    init-repo = !git-init-repo

    # add
    a = !git-a
    aa = add -vA

    # config
    aliases = config --get-regexp '^alias.*'
    users = !git-users
    user = !git-user

    # rev-parse
    dir = rev-parse --show-toplevel

    # branch
    b = branch

    # commit
    c = commit
    cm = commit -m
    uncommit = reset --soft HEAD^

    # checkout
    co = !echo 'use `switch` or `restore` instead of co (checkout)' && false
    sw = switch

    # tag
    tags = tag -l

    # fetch
    f = fetch
    fu = fetch upstream

    # log
    lg = !git-lg
    graph = lg

    # push
    ps = push
    psu = !git push -u origin `git symbolic-ref --short HEAD`

    # pull
    pl = pull

    # status
    s = status

    # diff
    df = !git-df
    diffstgd = df --staged
    dfst = diffstgd

    # hub
    sync = !hub sync
    pr = !hub pull-request
    browse = !hub browse
    browse-issues = !hub browse -- issues
    browse-pr = !hub browse -- pulls
    browse-releases = !hub browse -- releases
    browse-actions = !hub browse -- actions

    # ghq
    get = !ghq get

[user]
    useConfigOnly = true

[users "ryoga"]
    name = Ryooooooga
    email = ryoga_314@yahoo.co.jp
    signingKey = "" # overwriten in config.local

[gpg]
    program = gpg

[url "git@github.com:"]
    pushInsteadOf = https://github.com/
[url "git@gist.github.com:"]
    pushInsteadOf = https://gist.github.com/Ryooooooga/

[ghq]
    root = ~/Workspace

[include]
    path = config.local
