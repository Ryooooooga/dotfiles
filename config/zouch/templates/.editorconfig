root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
{{ $x := Shell `dir="$XDG_CONFIG_HOME/editorconfig"; ls "$dir" | fzf --multi --preview="bat --color=always '$dir/{}/.editorconfig'" | xargs -I{} cat "$dir/{}/.editorconfig"` -}}
{{ if $x -}}
{{ $x }}
{{ end -}}
